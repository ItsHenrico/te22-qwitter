{% extends "layout.njk" %}
{% block content %}

<h1>{{title}}</h1>
<p>{{message}}</p>

<ul class="tweet">
    <article>
        <header>
            {% for tweet in tweets %}
            <li>
                <h2>{{tweet.name}}</h2>
                <time datetime="{{ tweet.edited_at }}">{{tweet.edited_at}}</time>
            </header>
                <div class="message">
                    {{tweet.message}}
                </div>   
                <ul>
                    <li>Share</li>
                    <li>Reply</li>
                </ul>
            </li>
            {% endfor %}
    </article>
</ul>

{% endblock %}